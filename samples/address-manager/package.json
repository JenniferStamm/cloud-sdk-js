{
  "name": "address-amanger",
  "version": "0.0.1",
  "description": "SAP Cloud SDK for JS - Address Manager API sample application.",
  "author": "Frank Essenberger",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "yarn eslint --ext .ts src --fix && yarn prettier . -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "ci-build": "echo \"Use this to compile or minify your application\"",
    "ci-package": "sap-cloud-sdk package --include=\"package.json,package-lock.json,index.js,dist/**/*\"",
    "package": "sap-cloud-sdk package --include \"package.json,package-lock.json,index.js,dist/**/*\" --exclude \".env\"",
    "deploy": "npm run build && npm run package && cf push",
    "deploy:docker": "npm run build && npm run package && docker build -t docker-cloudsdk.docker.repositories.sap.ondemand.com/k8s-e2e-app:latest . && docker push docker-cloudsdk.docker.repositories.sap.ondemand.com/k8s-e2e-app:latest",
    "deploy:pipeline": "docker build -t docker-cloudsdk.docker.repositories.sap.ondemand.com/sdkjs-k8s-pipeline:latest ./pipeline && docker push docker-cloudsdk.docker.repositories.sap.ondemand.com/sdkjs-k8s-pipeline:latest"
  },
  "dependencies": {
    "@nestjs/common": "8.2.4",
    "@nestjs/core": "8.2.4",
    "@nestjs/platform-express": "8.2.4",
    "@sap/cloud-sdk-vdm-business-partner-service": "^2.0.0",
    "passport": "0.5.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.1",
    "webpack": "5.65.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.0",
    "@nestjs/cli": "8.1.6",
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.4",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/node": "^16.11.7",
    "@types/supertest": "2.0.11",
    "eslint": "8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "27.4.7",
    "prettier": "2.5.1",
    "supertest": "6.1.6",
    "ts-jest": "27.1.2",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.4",
    "@sap-cloud-sdk/eslint-config": "canary",
    "@typescript-eslint/parser": "^5.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
